import java.util.Scanner;

public class Uzduotis6 {

    //boolean-object, object has method//
//class -upper case
//variable and method-lower case//
//collection need object, can not save primitive variable//
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Please enter text");
        String myString =scanner.nextLine();
        int newInt = myString.length();
        myString =myString.toUpperCase();
        System.out.println(newInt);
        System.out.println(myString);
       if (myString.equals("š")){
           System.out.println(myString.length());
            int shPosition =myString.indexOf('Š');
            if (shPosition>-1){
                System.out.println("Rasta\"š\"raidė.Jos pozicija:");
//                +(shPosition+1);
            }else {
                System.out.println("Nerasta raide š ...");
            }

            for(int i = 0 ; i<myString.length(); i++){
                System.out.println(myString.charAt(i));
            }
       }
    }
}
